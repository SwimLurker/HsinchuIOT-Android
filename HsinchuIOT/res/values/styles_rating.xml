        <item name="android:progressDrawable">@drawable/com_rating_bar</item>
        <item name="android:indeterminateDrawable">@drawable/com_rating_bar</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>
    
    <style name="taskRatingBar" parent="RatingBar">
        <item name="android:minHeight">16dip</item>  
        <item name="android:maxHeight">16dip</item>
    </style>
