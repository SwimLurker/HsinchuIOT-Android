<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:homeAsUpIndicator">@drawable/btn_pre_white</item>
        <item name="android:actionBarStyle">@style/my_actionbar_style</item>
         <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="my_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/title_blue</item>
        <item name="android:titleTextStyle">@style/AcBar_titleStyle</item>
    </style>

    <style name="AcBar_titleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18.0dip</item>
    </style>

    <style name="tab_button">
        <item name="android:textSize">20.0dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/com_menu_tab</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0.70000005dip</item>
        <item name="android:layout_marginRight">0.70000005dip</item>
        <item name="android:layout_marginBottom">0dip</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NoActionbar" parent="@android:style/Theme.Holo.Light.NoActionBar"></style>
    
    <style name="NoTitle">
	    <item name="android:windowNoTitle">true</item>
	</style>
	<style name="Theme.picker" parent="android:Theme.Holo.Light.NoActionBar">
	    <item name="android:editTextColor">@color/red</item>
        <item name="android:editTextStyle">@style/Widget.EditText.White</item>
    </style>
    
    <style name="Widget.EditText.White" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/red</item>
    </style>
</resources>